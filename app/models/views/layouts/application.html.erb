<!DOCTYPE html>
<html>
<head>
  <title>Ideagarden</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div id="header">
    <div id="user_bar">
      <% if logged_in? %>
        <%= link_to "Edit Password", edit_user_path(current_user) %> |
        <%= link_to "Logout", logout_path %>
      <% else %>
        <%= link_to "Create user", new_user_path %>
        <%= link_to "Login", login_path %>
      <% end %>
    </div>
    <h1><%= link_to "IdeaGarden", root_path %></h1> <br />
  </div>

  <%= content_tag(:p, notice, :id => 'notice') if notice.present? %>
  <%= content_tag(:p, alert, :id => 'alert') if alert.present? %>

  <%= yield %>

</body>
</html>
