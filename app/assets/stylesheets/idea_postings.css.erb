/* general div */

.idea_posting {
  clear: both;
}

.feedback{
  clear: both;
}


.followed_feedback {
  background-color: rgb(183,213,121);
  clear: both;
}

/* pale green (modified from amy's logo): rgb(183,213,121)*/
/* normal green (from amy's logo): rgb(149,192,61) */


/* idea_posting voting */

.voting {
  float: left;
  text-align: center;
  margin-right: 10px;
}

/* idea_posting details */

h1 {
  margin-bottom: 40px;
}

.posting {
  margin-bottom: 40px;
  padding-bottom: 20px;
  border-bottom: 1px solid #BBB;
  width: 70%;
  float: left;
}

.posting > div {
  float: left;
}

.thumbnail {
  height: 100px;
  width: 100px;
  border-radius: 10px;
  border: 2px solid #BBB;
}

.brief {
  margin-left: 20px;
}

.title, .owners {
  display: inline
}

.title, .title > * {
  color: #42b2e6;
  text-decoration: none;
}

.title:hover, .title > *:hover {
  color: #0092D6;
}

.owners {
  margin-left: 7px;
}

.owners, .owners > * {
  text-decoration: none;
  color: #333;
}

.owners > a:hover {
  color: #90bf3c;
}


