
$('#login').each(function(){
	if($('#header').find(".new_session").length.toString() == 0){
		$(this).after('<%= j render('form')%>');
	}


	<%if @form_opened %>	
		$('.new_session').show();
		var offset = $(this).offset();
		
		$('#caret_up_gray').show(); 			
		$('#caret_down_gray').hide();		
		
		$('#login_submit').attr("class", "btn btn-success");	
		$('.new_session').css({'left' : offset.left-25, 'top' : offset.top+12});
		$('#login').css('font-weight', 'bold');
		
		$('#login').attr("href", "/login?form_opened=false");
		
	<%else%>
						
 		$('#login').css("font-weight", "normal"); 			
		
		$('#caret_up_gray').hide(); 			
		$('#caret_down_gray').show();
			
							
		$('.new_session').hide();
		
		$('#login').attr("href", "/login?form_opened=true");	
	
	<%end%>
	
});







<%if false%>
	<%if false %>$('.new_session').show();<%end%>
	if($(#header).find(".new_session") == []){
		$(this).after('<%= j render('form')%>');
	}
	else{
		$('.new_session').hide();
	}
	











	else{
		
		if($('.new_session').attr("display") == "hidden"){
			$('.new_session').show();	
		}
		
		else{
			$('.new_session').hide();				
		}

	}
		
	
	
<%end%>
