<%= form_tag session_path, :class => "new_session", :remote => false do %>
  
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag "Password" %>
    <%= password_field_tag :password_hash %>
  </div>
  <div class="actions">
    <%= submit_tag 'Login', :id => "login_submit", :class => "btn btn-success" %>
  </div>
<% end %>