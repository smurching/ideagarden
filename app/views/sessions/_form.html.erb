

<%= form_tag session_path, :class => "new_session" do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag "Password" %><br />
    <%= password_field_tag :password_hash %>
  </div>
  <div class="actions">
    <%= submit_tag 'Login' %>
  </div>
<% end %>