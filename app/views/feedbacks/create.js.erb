$('.feedback_error').remove();


<% if @failed_to_post %>

$('.new_feedback').before('<br/><p class="feedback_error"><%= j "Message must be between 10 and 1000 characters" %></p>');

<%else%>

	/*
	* $('#existing_feedback').html("<%= escape_javascript render @idea_posting.feedbacks %>");
	* $('#existing_private_feedback').html("<%= escape_javascript render 'private_feedbacks' %>");
	*/
	
	<%unless @feedback.private %>
		$('.new_feedback > #feedback_body').val("");
		$('#existing_feedback').append('<%= j render(@feedback)%>');
	<%else%>
		$('.new_feedback > #private_feedback_body').val("");
		$('#existing_private_feedback').append('<%= j render(@feedback)%>');
	<%end%>
	
<%end%>

